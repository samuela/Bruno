#!/bin/sh
BINDIR=`dirname $0`
path="edu.brown.cs32.mscheer"
export CLASSPATH=$($BINDIR/myJars lib):$($BINDIR/myJars derived)

if [ "$1" = "tests" ]
then
    shift
    `which java` org.junit.runner.JUnitCore ${path}.Tests ${1+"$@"}
else
    dirname=$1
    shift
    `which java` ${path}.${dirname}.Main ${1+"$@"}
fi

