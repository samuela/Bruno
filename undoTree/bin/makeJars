#!/bin/sh
cd ./derived
path="./classes/edu/brown/cs32/mscheer"
relPath="/edu/brown/cs32/mscheer"
dirsList=${path}/*
numDirs=0
for dir in $dirsList
do
    numDirs=$(($numDirs + 1))
    nameOfJar=`basename $dir`
    classListWithDirs=${dir}/*.class
    classList=""
    for class in $classListWithDirs
    do
	classList="${classList}-C ./classes ${relPath}/$nameOfJar/`basename $class` "
    done
    jar cf ${nameOfJar}.jar $classList
done
echo "created $numDirs jar files."
